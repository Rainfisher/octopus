<?xml version="1.0" encoding="UTF-8"?>
<octopus>

    <default-startup>logic</default-startup>

    <startup name="logic">

        <config name="app">
            <param name="file">conf/logic/app.json</param>
            <param name="fileType">json</param>
            <param name="hotLoad">true</param>
            <param name="callback"></param>
        </config>
        <config>
            <param name="file">conf/logic/mybatis.properties</param>
            <param name="fileType">properties</param>
        </config>
        <config>
            <param name="file">conf/logic/crossrealm.json</param>
            <param name="fileType">json</param>
            <param name="hotLoad">true</param>
        </config>
        <config>
            <param name="file">conf/logic/memcache.json</param>
            <param name="fileType">json</param>
        </config>
        <config>
            <param name="path">conf/json</param>
            <param name="fileType">json</param>
            <param name="extensions">json</param>
            <param name="hotLoad">true</param>
        </config>

        <ioc factory="guice" class="" />

        <listener>
            <listener-class></listener-class>
        </listener>

        <filter>
            <filter-class></filter-class>
        </filter>

        <timer-thread>1</timer-thread>
        <timer>
            <timer-class></timer-class>
            <timer-initialDelay></timer-initialDelay>
            <timer-delay></timer-delay>
        </timer>

    </startup>

</octopus>